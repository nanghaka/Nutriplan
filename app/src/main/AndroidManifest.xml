<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.cryptotunnel.nutriplan" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAINSTART" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyPlan"
            android:label="@string/title_activity_daily_plan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".HealthTips"
            android:label="@string/title_activity_health_tips"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".MealDairy"
            android:label="@string/title_activity_meal_dairy"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".NutriCalculator"
            android:label="@string/title_activity_nutri_calculator"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".NoteEditorActivity"
            android:label="@string/title_activity_note_editor"
            android:parentActivityName=".MealDairy" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MealDairy" />
        </activity>
        <activity
            android:name=".LineChartActivity"
            android:label="@string/graph" >
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".SimpleScannerActivity"
            android:label="@string/title_activity_simple_scanner" >
        </activity>
        <activity
            android:name=".scanner.ScannerActivity"
            android:label="@string/scanner_activity" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <!--facebook permissions-->
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/key" />
        <!--google permissions-->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>

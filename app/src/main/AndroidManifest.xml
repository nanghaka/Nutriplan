<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.cryptotunnel.nutriplan" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyPlan"
            android:label="@string/title_activity_daily_plan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".HealthTips"
            android:label="@string/title_activity_health_tips"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".MealDairy"
            android:label="@string/title_activity_meal_dairy"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".NutriCalculator"
            android:label="@string/title_activity_nutri_calculator"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MainActivity" />
        </activity>
        <activity
            android:name=".NoteEditorActivity"
            android:label="@string/title_activity_note_editor"
            android:parentActivityName=".MealDairy" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.MealDairy" />
        </activity>
        <activity
            android:name=".LineChartActivity"
            android:label="@string/graph"
           >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.cryptotunnel.nutriplan.DailyPlan" />

        </activity>
    </application>

</manifest>

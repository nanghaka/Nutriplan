<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nutricalculator.Calories"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inner_relative_layout"
        android:layout_centerInParent="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_action_person"
                android:drawableLeft="@drawable/ic_action_person"
                android:maxLength="3"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/wt"/>
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/energylevel"
            android:layout_below="@+id/text_input_layout_age">

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple"
            android:text="@string/simple"/>
            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moderate"
            android:text="@string/moderate"/>
            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active"
            android:text="@string/very_active"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:text="@string/calculator"
            android:layout_height="wrap_content"
            android:id="@+id/calculate"
            android:textColor="@color/white"
            android:background="@color/accent_material_light"
            android:layout_below="@+id/energylevel"/>

        <Button
            android:layout_width="wrap_content"
            android:text="@string/reset"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:layout_alignTop="@+id/calculate"
            android:layout_alignRight="@+id/text_input_layout_age"
            android:layout_alignEnd="@+id/text_input_layout_age" />
    </RelativeLayout>

</RelativeLayout>



